[alias]
	st = status
	co = checkout
  br = branch
  cr = codereview
	svn-diff = !git-svn-diff.sh
[merge]
	tool = gvimdiff
	conflictstyle = diff3
[rerere]
	enabled = true
[core]
	excludesfile = ~/.gitignore
	editor = vim
	deltaBaseCacheLimit = 1G
	autocrlf = input
[diff]
	external = gitvimdiff
  #renames = true
  submodule = log
[pager]
	diff =
[push]
  # default = simple
[format]
	pretty = oneline
[user]
	name = Dominic Hamon
[log]
	decorate = true
[status]
  submodulesummary = 1
[http]
	cookiefile = /home/dominic/.gitcookies
