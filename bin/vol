#!/bin/bash

if [ "X$1" = "Xup" ]; then
  amixer -q set Master 2dB+ unmute
elif [ "X$1" = "Xdown" ]; then
  amixer -q set Master 2dB- unmute
elif [ "X$1" = "Xmute" ]; then
  amixer -q set Master mute
elif [ "X$1" = "Xunmute" ]; then
  amixer -q set Master unmute
else
  echo "Usage: vol <up|down>"
  exit 1
fi

